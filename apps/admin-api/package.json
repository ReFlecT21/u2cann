{
  "name": "@adh/admin-api",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./env": "./src/env.ts",
    "./types/*": "./src/types/*.ts"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "start": "pnpm with-env tsx src/index.ts",
    "dev": "pnpm with-env tsx watch src/index.ts",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0",
    "test": "jest --detectOpenHandles",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "jest": {
    "preset": "@adh/jest-presets/node"
  },
  "dependencies": {
    "@adh/db": "workspace:*",
    "@adh/logger": "workspace:*",
    "@clerk/express": "^1.3.18",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.6",
    "express": "^4.18.3",
    "morgan": "^1.10.0",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@adh/eslint-config": "workspace:*",
    "@adh/jest-presets": "workspace:*",
    "@adh/prettier-config": "workspace:*",
    "@adh/tsconfig": "workspace:*",
    "@jest/globals": "^29.7.0",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.16.5",
    "@types/supertest": "^6.0.2",
    "esbuild": "^0.20.1",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "typescript": "5.5.4"
  },
  "prettier": "@adh/prettier-config"
}
