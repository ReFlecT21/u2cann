{
  "name": "adh",
  "private": true,
  "engines": {
    "node": ">=20.16.0"
  },
  "packageManager": "pnpm@9.7.1",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:push": "turbo -F @adh/db push",
    "db:studio": "turbo -F @adh/db studio",
    "db:sync": "turbo -F @adh/db sync",
    "dev": "turbo watch dev",
    "dev:next": "turbo watch dev -F @adh/nextjs...",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add --filter=@adh/ui --",
    "with-env": "dotenv --"
  },
  "devDependencies": {
    "@adh/prettier-config": "workspace:*",
    "@turbo/gen": "^2.3.0",
    "prettier": "catalog:",
    "turbo": "^2.3.0",
    "typescript": "catalog:"
  },
  "prettier": "@adh/prettier-config",
  "dependencies": {
    "fontkit": "^2.0.4",
    "lodash.throttle": "^4.1.1"
  }
}
